{
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "src",
		"target": "ES2020",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "dist",
		"types": [
			"node"
		],
	},
	"include": [
		"src/**/*"
	]
}