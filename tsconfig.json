{
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"typeRoots": [
			"./src/types",
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	]
}